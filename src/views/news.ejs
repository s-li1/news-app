              <button class="cloudbutton" id="10" onclick="addToList(this.id)">Science</button>
              <button class="cloudbutton" id="11" onclick="addToList(this.id)">Barista</button>
              <button class="cloudbutton" id="12" onclick="addToList(this.id)">Surgery</button>
              <button class="cloudbutton" id="13" onclick="addToList(this.id)">Death</button>
